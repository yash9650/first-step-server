<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Add data to database</title>
  </head>
  <body>
        <form class="p-5" action="/add-disease" method="post">
            <div class="col-6 mb-3">
                <label for="d_name" class="form-label">Disease Name</label>
                <input type="text" class="form-control" name="dName" id="d_name" required>
            </div>
            <div class="col-6 mb-3">
                <label for="symptom" class="form-label">Symptoms</label>
                <input type="text" class="form-control" name="symptom" id="symptom" required>
            </div>
            <div class="col-6 mb-3">
                <label for="desc" class="form-label">Description</label>
                <input type="textarea" class="form-control" name="description" id="desc" required>
            </div>
            <div class="col-6 mb-3">
                <label for="img-url" class="form-label">Image Url</label>
                <input type="url" class="form-control" name="imageUrl" id="img-url" required>
            </div>
            <div class="col-6 mb-3">
                <label for="home-remedies" class="form-label">Home Remedies</label>
                <textarea name="homeRemedies" id="" cols="30" rows="10" required></textarea>
                <!-- <input type="textarea" class="form-control" name="homeRemedies" id="home-remedies" required> -->
            </div>
            <div class="col-6 mb-3">
                <label for="typeOfDisease" class="form-label">Type</label>
                <select name="type" required class="form-select">
                    <option value="">Select</option>
                    <option value="Chronic">Chronic</option>
                    <option value="Acute">Acute</option>
                    <option value="Infectious">Infectious</option>
                    <option value="Hereditary">Hereditary</option>
                    <option value="Deficiency">Deficiency</option>
                    <option value="Physiological">Physiological</option>
                  </select>
            </div>
            <div class="col-6 mb-3">
                <label for="healthEffect" class="form-label">Health Effect</label>
                <input type="text"  class="form-control" name="healthEffect" id="healthEffect">
            </div>
            <div class="col-6 mb-3">
                <label for="cancerous" class="form-label">Is it Cancerous?</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="cancerous" value="Yes" id="flexRadioDefault1">
                    <label class="form-check-label" for="flexRadioDefault1">
                      Yes
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="cancerous" value="No" id="flexRadioDefault2">
                    <label class="form-check-label" for="flexRadioDefault2">
                      No
                    </label>
                  </div>
            </div>

            
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    
  </body>
</html>